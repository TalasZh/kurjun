<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
  <persistence-unit name="PU-KURJUN" transaction-type="RESOURCE_LOCAL">
    <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>

    <class>ai.subut.kurjun.core.dao.model.identity.UserEntity</class>
    <!--
    <class>ai.subut.kurjun.core.dao.model.identity.UserTokenEntity</class>
    <class>ai.subut.kurjun.core.dao.model.identity.RelationEntity</class>
    <class>ai.subut.kurjun.core.dao.model.identity.RelationObjectEntity</class>
     -->
    <exclude-unlisted-classes>true</exclude-unlisted-classes>

    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
      <property name="javax.persistence.jdbc.url"    value="jdbc:derby:/tmp/var/lib/kurjun/derbyDB;create=true" />
      <property name="javax.persistence.jdbc.user" value="subutai" />
      <property name="javax.persistence.jdbc.password" value="kurjun321subutai" />

      <property name="openjpa.Log" value="DefaultLevel=WARN, Tool=INFO, SQL=TRACE" />
      <property name="openjpa.ConnectionFactoryProperties" value="PrintParameters=true" />
      <property name="openjpa.RuntimeUnenhancedClasses" value="supported" />
      <property name="openjpa.jdbc.DBDictionary" value="derby" />
      <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)" />
    </properties>

  </persistence-unit>
</persistence>