<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
  <persistence-unit name="PU_KURJUN" transaction-type="RESOURCE_LOCAL">
    <non-jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=openjpa/kurjunDS)
    </non-jta-data-source>

    <!--  Identity     -->
    <class>ai.subut.kurjun.core.dao.model.identity.UserEntity</class>
    <class>ai.subut.kurjun.core.dao.model.identity.UserTokenEntity</class>
    <class>ai.subut.kurjun.core.dao.model.identity.RelationEntity</class>
    <class>ai.subut.kurjun.core.dao.model.identity.RelationObjectEntity</class>


    <!--  Metadat     -->
    <class>ai.subut.kurjun.core.dao.model.metadata.RepositoryArtifactId</class>
    <class>ai.subut.kurjun.core.dao.model.metadata.RepositoryDataId</class>
    <class>ai.subut.kurjun.core.dao.model.metadata.RepositoryDataEntity</class>
    <class>ai.subut.kurjun.core.dao.model.metadata.TemplateDataEntity</class>
    <class>ai.subut.kurjun.core.dao.model.metadata.RawDataEntity</class>
    <class>ai.subut.kurjun.core.dao.model.metadata.AptDataEntity</class>
    <class>ai.subut.kurjun.core.dao.model.metadata.AptDependencyEntity</class>



    <exclude-unlisted-classes>true</exclude-unlisted-classes>

    <properties>
      <!--<property name="openjpa.Log" value="DefaultLevel=WARN, Runtime=INFO, Tool=INFO, SQL=INFO" /> -->
      <property name="openjpa.Log" value="DefaultLevel=WARN" />
      <property name="openjpa.ConnectionFactoryProperties" value="PrintParameters=true" />
      <property name="openjpa.RuntimeUnenhancedClasses" value="supported" />
      <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema" />
      <property name="openjpa.jdbc.DBDictionary" value="derby" />
    </properties>

  </persistence-unit>
</persistence>