<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>kurjun-parsers</artifactId>
    <groupId>ai.subut.kurjun</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>kurjun-packages-parser</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>Kurjun Packages Index Parser</name>

  <properties>
    <jdeb.version>1.3</jdeb.version>
    <commons-compress.version>1.9</commons-compress.version>

    <test.pkg.filename.1>
      apt-transport-https_1.0.9.2ubuntu2_amd64.deb
    </test.pkg.filename.1>
    <test.pkg.url.1>
      http://archive.ubuntu.com/ubuntu/pool/main/a/apt/apt-transport-https_1.0.9.2ubuntu2_amd64.deb
    </test.pkg.url.1>

    <test.pkg.filename.2>
      bc_1.06.95-9_amd64.deb
    </test.pkg.filename.2>
    <test.pkg.url.2>
      http://archive.ubuntu.com/ubuntu/pool/main/b/bc/bc_1.06.95-9_amd64.deb
    </test.pkg.url.2>

    <test.pkg.index.url.gz>
      http://archive.ubuntu.com/ubuntu/dists/trusty/main/binary-amd64/Packages.gz
    </test.pkg.index.url.gz>
    <test.pkg.index.url.bz2>
      http://archive.ubuntu.com/ubuntu/dists/trusty/main/binary-amd64/Packages.bz2
    </test.pkg.index.url.bz2>
    
  </properties>

  <build>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>**/*.properties</include>
        </includes>
      </testResource>
    </testResources>
  </build>

  <dependencies>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>model</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>cfparser</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ar</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>org.vafer</groupId>
      <artifactId>jdeb</artifactId>
      <version>${jdeb.version}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-compress</artifactId>
      <version>${commons-compress.version}</version>
    </dependency>
    
    <!-- Test Scope Dependencies -->

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <version>${mockito.version}</version>
      <scope>test</scope>
      <type>jar</type>
    </dependency>

  </dependencies>
</project>
